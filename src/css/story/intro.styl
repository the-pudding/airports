.intro
	margin 0 auto
	max-width $column-width
	margin-bottom 4rem
	sup
		color #FFEB3B
		font-family 'Atlas Grotesk Web'
		font-weight 500
	.sources
		font-size 11px
		color white
		font-family 'Atlas Grotesk Web'
		margin 0 auto
		margin-bottom 5rem
		margin-top .5rem
		max-width 35rem
		a
			color white
			border-bottom 1px solid #888
	.scatter-wrapper
		position relative
		.scatter-tooltip
			position absolute
			top 0px
			left 0px
			pointer-events none
			visibility hidden
			p
				color white
				font-family 'Atlas Grotesk Web'
				background #2a2a2a
				padding 0 1rem
				border-radius 10px
				border 2px solid rgba(150,150,150,.5)
				text-transform uppercase
				font-size 12px
				font-weight 600
				letter-spacing 1px
	#arrow
		margin-top 3rem
		margin-bottom 1rem
		svg
			margin 0 auto
			display block
	#scatter
		margin-top 4rem
		margin-bottom 2rem
		svg
			margin 0 auto
			display block
			#Group_3
				path
					cursor hand
					cursor pointer

	#pyramid
		margin-top 3rem
		//margin-bottom 3rem

	.chart-head
		color white
		font-family 'Atlas Grotesk Web'
		max-width 40rem
		margin 0 auto
		font-size 18px
		font-weight 500
		margin-top 4rem

	.source
		font-size 10px
		text-align left
		color white
		font-family 'Atlas Grotesk Web'
		color #aaa
		line-height 1.3

	.prose
		color white
		font-size 1rem
		margin-bottom 1.5rem
		max-width 40rem
		padding 0px
		line-height 1.7
		position relative
		.note
			position absolute
			right -20px
			margin 0px
			border-left 1px solid #aaa
			padding-left 10px
			top 0px
			transform translate(100%,0px)
			width 100px
			font-size 11px
			color #ccc
			font-weight 400
			line-height 1.4
			font-family 'Atlas Grotesk Web'
		a
			color white
			border-color white

	.byline-wrapper
		display flex
		color white
		padding-top 10rem
		.intro__byline
			font-size 14px
			font-family 'Atlas Grotesk Web'
			a
				color white
				font-weight 300
				border-bottom 1px solid #888
		.byline-date
			color white
			font-family 'Atlas Grotesk Web'
			font-size 14px
			font-weight 500
			margin-right 10px

	#map
		margin-top 3rem
		background-image url('assets/images/map.png')
		height 530px
		background-size contain
		width 100%
		background-repeat no-repeat
		position relative
		margin-bottom 3rem
		.source
			position absolute
			bottom 0px
			left 0px
			width 100px
		&:after
			position absolute
			content 'Except Paris has 927 departing flights per day. Kinshasa has only 13.'
			bottom 0px
			left 0px
			right 0px
			width 350px
			text-align center
			margin 0 auto
			color white
			font-family 'Atlas Grotesk Web'
			font-weight 400
			font-size 18px

	&__hed
		max-width $column-width
		margin 0 auto
		font-weight 400
		text-align left
		font-family 'Atlas Grotesk Web'
		color white
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			font-size 36px



	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)

	svg
		text
			font-family 'Atlas Grotesk Web'
