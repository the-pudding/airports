.intro
	margin 0 auto
	max-width $column-width

	.chart-head
		color white
		font-family 'Atlas Grotesk Web'
		max-width 45rem
		margin 0 auto
		font-size 24px
		font-weight 400
		margin-top 5rem

	.source
		font-size 10px
		text-align left
		color white
		font-family 'Atlas Grotesk Web'
		color #aaa
		line-height 1.3

	.prose
		color white
		font-size 1rem
		margin-bottom 1.5rem
		max-width 40rem

	.byline-wrapper
		display flex
		color white
		padding-top 10rem
		.intro__byline
			font-size 14px
			font-family 'Atlas Grotesk Web'
			a
				color white
				font-weight 300
				border-bottom 1px solid #888
		.byline-date
			color white
			font-family 'Atlas Grotesk Web'
			font-size 14px
			font-weight 500
			margin-right 10px

	#map
		margin-top 3rem
		background-image url('assets/images/map.png')
		height 530px
		background-size contain
		width 100%
		background-repeat no-repeat
		position relative
		margin-bottom 3rem
		.source
			position absolute
			bottom 0px
			left 0px
			width 100px
		&:after
			position absolute
			content 'Except Paris has 927 departing flights per day. Kinshasa has only 13.'
			bottom 0px
			left 0px
			right 0px
			width 350px
			text-align center
			margin 0 auto
			color white
			font-family 'Atlas Grotesk Web'
			font-weight 400
			font-size 18px

	&__hed
		max-width $column-width
		margin 0 auto
		font-weight 400
		text-align left
		font-family 'Atlas Grotesk Web'
		color white
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			font-size 36px



	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)

	svg
		text
			font-family 'Atlas Grotesk Web'
